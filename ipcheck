#!/bin/sh

echo "Updating A record with id '${RECORDIDA}' for domain with id '${DOMAINID}'"
curl -4 -s -X PUT \
    -H "Authorization: Bearer ${APIKEY}" \
    -d '{"target":"[remote_addr]"}' \
    "https://api.linode.com/v4/domains/${DOMAINID}/records/${RECORDIDA}"
echo
echo "Updating AAAA record with id '${RECORDIDAAAA}' for domain with id '${DOMAINID}'"
curl -6 -s -X PUT \
    -H "Authorization: Bearer ${APIKEY}" \
    -d '{"target":"[remote_addr]"}' \
    "https://api.linode.com/v4/domains/${DOMAINID}/records/${RECORDIDAAAA}"
